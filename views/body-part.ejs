<body>
  <div class="container">
    <h1 class="text-center mb-4">Select Body Part</h1>
    <form action="/select-workout" method="post">
      <div class="form-group">
          <label for="bodyPart">Select Body Part:</label>
          <select class="form-control" id="bodyPart" name="selectedBodyPart" required>
              <option value="" disabled selected>Select Body Part</option>
               <% bodyPartOptions.forEach(option => { %>
                  <option value="<%= option %>"><%= option %></option>
              <% }); %>
          </select>
      </div>
      <button type="submit" class="btn btn-primary btn-block">Next</button>
  </form>
  </div>

